---
export interface Props {
  title?: string;
}

const { title = "mswsn's Cookbook" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-zinc-100 dark:bg-zinc-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="description"
      content="A collection of recipes I found worth saving."
    />
    <title>{title ?? "mswsn's Cookbook"}</title>
  </head>
  <body class="flex flex-col items-center">
    <div
      class="prose prose-zinc my-16 w-full max-w-prose px-4 dark:prose-invert sm:my-24 sm:px-0"
    >
      <slot />
    </div>
  </body>
</html>
